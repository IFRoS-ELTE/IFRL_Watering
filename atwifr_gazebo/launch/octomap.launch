<launch>
    <node pkg="octomap_server" type="octomap_server_node" name="octomap_server">
     <param name="resolution" value="0.05" />
     <param name="frame_id" type="string" value="odom" />
     <param name="base_frame_id" type="string" value="base_link" />
     <param name="ground_filter/angle"  value="0.5" />
     <param name="ground_filter/distance"  value="0.7" />
     <param name="ground_filter/plane_distance"  value="0.7" />
     <param name="sensor_model/miss"  value="0.2" />
     <param name="filter_ground"  value="true" />

     <param name="sensor_model/max_range" value="100.0" />
     <param name="occupancy_min_z" value="-inf" />
     <param name="occupancy_max_z" value="inf" />
     
     <remap from="cloud_in" to="/kiss_icp/kiss_icp_node/velodyne_pcl" />
    </node>
</launch>